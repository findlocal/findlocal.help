<%= simple_form_for task do |f|	 %>
  <%= f.input :title, label: "TITLE*", class: "form-control" %>
  <%= f.input :description, label: "DESCRIPTION*", as: :text, class: "form-control" %>
  <%= f.input :location, label: "LOCATION*", class: "form-control" %>

  <div class="form-group">
    <%= f.label :photos, "ADD TASK PHOTOS (Optional)", class: "d-block" %>
    <%= f.file_field :photos, label: "Task Photo", multiple: true, direct_upload: true %>
  </div>
  <div class="form-group">
    <%= f.label :tags, "ADD TAGS (Maximum 3)" %>
    <div class="form-tags">
      <%= f.association :tags, as: :check_boxes, label: "" %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
  <%= f.button :submit, class: "btn-gradient" %>
  </div>
<% end %>
