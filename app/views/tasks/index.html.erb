<section class="tasks-index">
  <% if @tasks.empty? %>
  <div class="container task-content mt-3">
    <div class="row">
      <div>
        <p class="my-2">Can't find any task with the specified options</p>
        <%= link_to "Search again", root_path, class: "btn btn-primary mr-3" %>
        <%= link_to "See all tasks", tasks_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <% else %>
  <%# <div class="container task-content mt-3">
    <div class="row"> %>
  <div class="task-content">
    <div class="tasks-index-cards">
      <% @tasks.each do |task| %>
      <div class="tasks-index-card">
        <%= render "shared/task_card", task: task%>
      </div>
      <% end %>
    </div>
 <div id="map" class="tasks-index-map"
        data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
    <% end %>

</section>
<% @tasks.each do |task| %>
<%= render "shared/task_modal", task: task %>
<% end %>